<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text_box"
        android:hint="Type a message"
        android:paddingVertical="@dimen/dp_12"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_48"
        android:textSize="@dimen/sp_16"
        android:textColorHint="@color/_b5b5b9"
        app:layout_constraintHeight_min="@dimen/dp_32"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_send"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_6"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/ic_baseline_send_24"
        app:layout_constraintBottom_toBottomOf="@id/tb"
        app:layout_constraintEnd_toEndOf="@id/tb"
        app:tint="@color/_32ade6" />
</androidx.constraintlayout.widget.ConstraintLayout>