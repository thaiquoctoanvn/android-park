<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".component.connectivity.BluetoothConnectingActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_start_listener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start bluetooth listener - for sender" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_discovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="Discovery bluetooth - for receiver" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_weight="1" />
</androidx.appcompat.widget.LinearLayoutCompat>