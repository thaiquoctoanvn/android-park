<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".component.connectivity.FileTransferActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_transfer_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer files directly" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_transfer_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer files via wifi" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_transfer_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer files with QR code" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_qr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/dp_16" />
</androidx.appcompat.widget.LinearLayoutCompat>